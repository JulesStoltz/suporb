<NavButton@Button>:
    font_size: '20sp'
    color: (0.25, 0.75, 1, 1)
    bold: True

<CardFront@Label>:
    font_size: '20sp'
    bold: True
    text_size: self.size
    valign: 'center'
    halign: 'center'

<CardBack@Button>:
    font_size: '20sp'
    text_size: self.size
    valign: 'center'
    halign: 'center'

<Header@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: 0.1

    NavButton:
        text: 'Last'

    NavButton:
        text: 'Sort'

    NavButton:
        text: 'Next'

<Body@BoxLayout>:
    orientation: 'vertical'

    CardFront:
        text: 'Card Face'

    CardBack:
        text: 'Select this box to show the definition.'

<Footer@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: 0.1

    NavButton:
        text: 'Yes'

    NavButton:
        text: 'Maybe'

    NavButton:
        text: 'No'

GridLayout:
    rows: 3
    
    Header:  

    Body:

    Footer:
