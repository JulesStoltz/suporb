<BoardSpace@Button>:
    text: ''
    font_size: 30
    disabled_color: 255.0/255.0,255.0/255.0,255.0/255.0,1

<BoardLabel@Label>:
    font_size: 30

BoxLayout:
    orientation: 'vertical'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: 0.6, 1
    padding: '20dp'

    BoardLabel:
        text: 'Tik Tak Toh'
        size_hint: 1, 0.5

    BoardLabel:
        id: instruct
        text: 'Player X, select a box.'

    GridLayout:
        cols: 3

        BoardSpace:
            id: tl
            on_release:
                tl.text = app.turn
                tl.disabled = True
                app.checkBoard()

        BoardSpace:
            id: tm
            on_release:
